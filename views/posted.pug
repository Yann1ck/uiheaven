style.
	html, body {
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
	}
	
	.one {
	height: 100vh;
	width: 100%;
	background-image: url('VerkeerdBezorgd/Assets/BG@1x.jpg');
	background-repeat: no-repeat;
	background-size: cover;
	}
	
	.header {
	width: 100%;
	height: 10vh;
	display: block;
	}

	.header p {
	color: #E93700;
	text-align: center;
	padding: 10 0;
	font-weight: bold;
	font-size: 12px;
	font-family: Futura;
	}
	
	.header img {
	position: absolute;
	top: 10;
	right: 10;
	}
	
	.body {
	width: 80%;
	font-family: Futura;
	text-align: center;
	margin: auto;
	position: absolute;
	top: 30%;
	left: 10%;
	}

	.body p {
	text-align: left;
	font-size: 12px;
	}
	
	a {
	text-decoration: none;
	color: #E93700;
	}
